#!/usr/bin/env bash

set -eo pipefail

target=$(echo "${1}" | cut -f 1 -d ' ')
case "${target}" in
    bleeding)
        make packagecloud PACKAGE_CLOUD="runner/unstable" \
                          DEB_DISTROS="debian ubuntu" \
                          RPM_DISTROS="el fedora amazon"
        ;;
    stable)
        make packagecloud
        ;;
    *)
        echo "Unknown packagecloud upload target: '${target}'"
        exit 1
        ;;
esac
